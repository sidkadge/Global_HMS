@model IEnumerable<WebApplication1.Models.OnlyTestModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>

<head>

    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Custom fonts for this template -->
    <link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
          rel="stylesheet">

    <!-- Custom styles for this template -->
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet">

    <!-- Custom styles for this page -->
    <link href="~/Content/vendor/datatables/dataTables.bootstrap4.min.css" rel="stylesheet">
    <link rel="stylesheet" type="text/css" media="screen" href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css" />
    <link rel="stylesheet" href="//maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css">

</head>
<body id="page-top">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary" style="font-size:25px">All Diagnostic Billing</h6>
        </div>
        <div>

            @using (Html.BeginForm("IndexTestAll", "Diagnostic", FormMethod.Get))
            {
                <table>
                    <tr>
                        <td class="text-center">

                            @Html.RadioButton("SearchBy", "Branch", true, new { @class = "hidden" })

                        </td>
                    </tr>

                </table>
                <div class="row">
                    <div class="col-xl-3 col-md-6 mb-4">
                        <a class="fa fa-home" aria-hidden="true" href="~/HMS_Global/Index" style="font-size:20px"></a>
                        <a href="~/HMS_Global/Index" style="font-size:20px"> Home</a>
                    </div>

                    <div class="col-xl-3 col-md-6 mb-4">

                        <span> <b>Search By:</b></span>

                        @Html.DropDownList("SearchValue", new List<SelectListItem>
                        {
                            new SelectListItem { Text = "All", Value = "All" },
                            new SelectListItem { Text = "Jamner", Value = "Jamner" },
                            new SelectListItem { Text = "Kurduwadi", Value = "Kurduwadi" }
                        }, "Select Branch", new { Text = "SearchValue" })
                    </div>
                    @*<div class="col-xl-3 col-md-6 mb-4">

                            <span> <b>Search By:</b></span>

                            @Html.DropDownList("SearchValueLR", new List<SelectListItem>
                            {

                                new SelectListItem { Text = "Lab", Value = "Lab" },
                                new SelectListItem { Text = "Radiology", Value = "Radiology" }
                            }, "Select        ", new { Text = "SearchValueL&R" })
                        </div>*@

                </div>

                <br />
                <div class="row">
                    <div class="col-xl-3 col-md-6 mb-4">
                    </div>
                    <div class="col-xl-3 col-md-6 mb-4">
                        <label for="Text">From Date</label>
                        <input type="date" name="Fromdate" data-date-format='yyyy-MM-dd' />

                    </div>
                    <div class="col-xl-3 col-md-6 mb-4">
                        <label for="Text">To Date</label>
                        <input type="date" name="Todate" data-date-format='yyyy-MM-dd' />

                        <input type="submit" class="btn btn-primary" value="Search" style="float: right;" />

                    </div>

                </div>

            }
        </div>


        <div class="card shadow mb-4">

        </div>
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" cellspacing="0">
                <tr>
                    <th>
                        Branch
                    </th>
                    <th>
                        OPD ID
                    </th>
                    <th>
                        Patient Name
                    </th>
                    <th>
                        Doctor Name
                    </th>
                    <th>
                        Billing Date
                    </th>

                    <th>
                        Bill Amount
                    </th>
                    <th>
                        Received
                    </th>
                    <th>
                        Pending
                    </th>


                    <th>
                        Lab Charges
                    </th>

                    <th>
                        Radiology Charges
                    </th>

                    <th>
                        Consultant Charges
                    </th>
                    <th>
                        Registration Charges
                    </th>

                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Branch)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.OPDID_Sr)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Doctor_Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.Bill_Amount)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Received)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Pending)
                        </td>


                        <td>@item.Lab_Total</td>



                        <td>@item.Radiology_Total</td>



                        <td>
                            @Html.DisplayFor(modelItem => item.Registration_Charges)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Consultant_Charges)
                        </td>


                        <td></td>

                    </tr>
                }

            </table>
        </div>

    </div>
    <!-- Bootstrap core JavaScript-->
    <script src="~/Content/vendor/jquery/jquery.min.js"></script>
    <script src="~/Content/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Core plugin JavaScript-->
    <script src="~/Content/vendor/jquery-easing/jquery.easing.min.js"></script>

    <!-- Custom scripts for all pages-->
    <script src="~/Content/js/sb-admin-2.min.js"></script>

    <!-- Page level plugins -->
    <script src="~/Content/vendor/datatables/jquery.dataTables.min.js"></script>
    <script src="~/Content/vendor/datatables/dataTables.bootstrap4.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Content/js/demo/datatables-demo.js"></script>

</body>

</html>