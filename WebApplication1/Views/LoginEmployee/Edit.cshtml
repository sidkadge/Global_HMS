@model WebApplication1.Models.LoginModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html style="background-image: url('../../image/hospital room.jpg')">
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Change Password</title>
</head>
<body>

    <style>
        #product {
            position: absolute;
            left: 28%;
            right: -6%;
            padding: 63px 14px;
            align-content: center;
            margin-top: 23px;
            height: 320px
        }

        .rounded {
            border-radius: 10.35rem !important;
        }
    </style>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div id="product">


            <div class="form-horizontal" style="margin-bottom: 0rem;">



                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
               
                @Html.HiddenFor(model => model.GID)
                <div class="col-lg-7" style="background-color:white;padding-bottom:40px;padding-top:18px;">

                    <div class="text-center">
                        <h1 class="h4 text-gray-900 mb-4">Change Password</h1>
                    </div>
                    <div class="form-group" style="margin-top: 0rem">
                        <label>Enter Full Name</label>
                        @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control form-control-user text-box single-line", placeholder = "Enter Full Name", style = "border-color: black;", @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                    </div>
                    <div class="form-group row">

                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <label>Designation</label>
                            @Html.EditorFor(model => model.Designation, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Enter Designation", style = "border-color: black;", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Designation, "", new { @class = "text-danger" })
                        </div>
                        <div class="col-sm-6">
                            <label>Branch</label>
                            @Html.EditorFor(model => model.Branch, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Enter Branch", style = "border-color: black;", @readonly = "readonly" } })
                            @Html.ValidationMessageFor(model => model.Branch, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label>Email ID</label>
                        @Html.EditorFor(model => model.Email_ID, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Enter Email", style = "border-color: black;" , @readonly = "readonly" } })
                        @Html.ValidationMessageFor(model => model.Email_ID, "", new { @class = "text-danger" })

                    </div>

                    <div class="form-group row">
                        <div class="col-sm-6 mb-3 mb-sm-0">
                            <label>Change Username</label>
                            @Html.EditorFor(model => model.User_Name, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Enter Username", style = "border-color: black;" } })
                            @Html.ValidationMessageFor(model => model.User_Name, "", new { @class = "text-danger" })

                        </div>
                        <div class="col-sm-6">
                            <label> Chanage Password</label>
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control form-control-user", placeholder = "Enter Password", style = "border-color: black;" } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })

                        </div>
                    </div>


                    <input type="submit" value="Update" class="btn btn-primary" style="float:right;" />
                </div>



            </div>



        </div>


    }
    <link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
    @*<div>
        @Html.ActionLink("Back to List", "Index")
    </div>*@
</body>
</html>
