@model IEnumerable<WebApplication1.Models.LoginModel>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>



    @using (Html.BeginForm("LoginDetails", "LoginEmployee", FormMethod.Get))
    {

        <div class="form-horizontal">
            <h4>LoginModel</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <label for="Text">Username</label>
                <div class="col-md-10">
                    <input type="text" id="User_Name_id" name="User_Name" />

                </div>
             </div>

                <div class="form-group">
                    <label for="Text">Password</label>
                    <div class="col-md-10">
                        <input type="text" id="Password_id" name="Password" />
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">

                        <input type="submit" class="btn btn-primary" value="Login" />
                    </div>
                    <link href="~/Content/css/sb-admin-2.css" rel="stylesheet" />
                    <link href="~/Content/css/sb-admin-2.min.css" rel="stylesheet" />
                    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
                    <script src="~/Scripts/jquery.validate.min.js"></script>
                    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
                </div>
            </div>
    }

   
</body>
</html>
