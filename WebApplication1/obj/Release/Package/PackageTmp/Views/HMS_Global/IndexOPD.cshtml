        $(function () {
            $("#Todate").datepicker({ dateFormat: 'yy-mm-dd' });
        });
    </script>

</head>
@*@if (!string.IsNullOrEmpty(ViewBag.Message))
{
    <div class="alert alert-success">
        @ViewBag.Message
